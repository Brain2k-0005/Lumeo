@page "/components/checkbox"

<PageTitle>Checkbox â€” Lumeo</PageTitle>

<PageHeader Title="Checkbox" Description="A control that allows the user to toggle between checked and not checked." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="flex items-center gap-2">
            <Checkbox @bind-Checked="_checked1" />
            <label class="text-sm font-medium leading-none">Accept terms and conditions</label>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Binding" Code="@_bindingCode">
        <div class="space-y-4">
            <div class="flex items-center gap-2">
                <Checkbox @bind-Checked="_checked2" />
                <label class="text-sm font-medium leading-none">Enable notifications</label>
            </div>
            <p class="text-sm text-muted-foreground">Checked: @_checked2</p>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Disabled" Code="@_disabledCode">
        <div class="space-y-3">
            <div class="flex items-center gap-2">
                <Checkbox Checked="false" Disabled="true" />
                <label class="text-sm font-medium leading-none text-muted-foreground">Disabled unchecked</label>
            </div>
            <div class="flex items-center gap-2">
                <Checkbox Checked="true" Disabled="true" />
                <label class="text-sm font-medium leading-none text-muted-foreground">Disabled checked</label>
            </div>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Multiple Options" Code="@_multipleCode">
        <div class="space-y-3">
            <div class="flex items-center gap-2">
                <Checkbox @bind-Checked="_optionA" />
                <label class="text-sm font-medium leading-none">Option A</label>
            </div>
            <div class="flex items-center gap-2">
                <Checkbox @bind-Checked="_optionB" />
                <label class="text-sm font-medium leading-none">Option B</label>
            </div>
            <div class="flex items-center gap-2">
                <Checkbox @bind-Checked="_optionC" />
                <label class="text-sm font-medium leading-none">Option C</label>
            </div>
            <p class="text-sm text-muted-foreground">Selected: @string.Join(", ", GetSelected())</p>
        </div>
    </ComponentDemo>
</div>

@code {
    private bool _checked1;
    private bool _checked2 = true;
    private bool _optionA = true;
    private bool _optionB;
    private bool _optionC = true;

    private IEnumerable<string> GetSelected()
    {
        if (_optionA) yield return "A";
        if (_optionB) yield return "B";
        if (_optionC) yield return "C";
    }

    private string _defaultCode = @"<div class=""flex items-center gap-2"">
    <Checkbox @bind-Checked=""_checked"" />
    <label class=""text-sm font-medium leading-none"">Accept terms and conditions</label>
</div>";

    private string _bindingCode = @"<div class=""flex items-center gap-2"">
    <Checkbox @bind-Checked=""_checked"" />
    <label class=""text-sm font-medium leading-none"">Enable notifications</label>
</div>
<p class=""text-sm text-muted-foreground"">Checked: @_checked</p>

@code {
    private bool _checked = true;
}";

    private string _disabledCode = @"<Checkbox Checked=""false"" Disabled=""true"" />
<Checkbox Checked=""true"" Disabled=""true"" />";

    private string _multipleCode = @"<Checkbox @bind-Checked=""_optionA"" />
<Checkbox @bind-Checked=""_optionB"" />
<Checkbox @bind-Checked=""_optionC"" />";
}
