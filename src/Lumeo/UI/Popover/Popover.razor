@namespace Lumeo

@{
    var context = new PopoverContext(IsOpen, EventCallback.Factory.Create<bool>(this, SetOpen));
}

<CascadingValue Value="context" IsFixed="false">
    <div class="relative inline-block" @attributes="AdditionalAttributes">
        @ChildContent
    </div>
</CascadingValue>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private async Task SetOpen(bool value)
    {
        IsOpen = value;
        await IsOpenChanged.InvokeAsync(value);
    }

    public record PopoverContext(bool IsOpen, EventCallback<bool> SetOpen);
}
