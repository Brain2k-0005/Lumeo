@page "/"

<PageTitle>Lumeo â€” Blazor Component Library</PageTitle>

<div class="flex flex-col items-center text-center py-16 space-y-8">
    <div class="space-y-4 max-w-2xl">
        <h1 class="text-5xl font-bold tracking-tight text-foreground">
            Build your Blazor UI<br />
            with <span class="text-primary">Lumeo</span>
        </h1>
        <p class="text-xl text-muted-foreground">
            Beautifully designed, accessible components inspired by shadcn/ui.
            Built for .NET 10 with Tailwind CSS v4. Open source.
        </p>
    </div>

    <div class="flex gap-4">
        <a href="components" class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground px-6 py-2.5 text-sm font-medium shadow hover:bg-primary/90 transition-colors no-underline">
            Browse Components
        </a>
        <a href="themes" class="inline-flex items-center justify-center rounded-md border border-input bg-background px-6 py-2.5 text-sm font-medium shadow-sm hover:bg-accent hover:text-accent-foreground transition-colors no-underline">
            Customize Theme
        </a>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-8 pt-8">
        <div class="text-center">
            <div class="text-3xl font-bold text-foreground">54+</div>
            <div class="text-sm text-muted-foreground">Components</div>
        </div>
        <div class="text-center">
            <div class="text-3xl font-bold text-foreground">5</div>
            <div class="text-sm text-muted-foreground">Color Themes</div>
        </div>
        <div class="text-center">
            <div class="text-3xl font-bold text-foreground">7</div>
            <div class="text-sm text-muted-foreground">Chart Types</div>
        </div>
    </div>

    <!-- Feature Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-8 w-full max-w-4xl text-left">
        <Card>
            <CardHeader>
                <h3 class="text-lg font-semibold leading-none tracking-tight text-foreground">Tailwind CSS v4</h3>
                <p class="text-sm text-muted-foreground">Built on CSS custom properties. Theme with variables, not config files.</p>
            </CardHeader>
        </Card>
        <Card>
            <CardHeader>
                <h3 class="text-lg font-semibold leading-none tracking-tight text-foreground">Accessible</h3>
                <p class="text-sm text-muted-foreground">ARIA attributes, keyboard navigation, and focus management built in.</p>
            </CardHeader>
        </Card>
        <Card>
            <CardHeader>
                <h3 class="text-lg font-semibold leading-none tracking-tight text-foreground">Dark Mode</h3>
                <p class="text-sm text-muted-foreground">Automatic dark mode via CSS variable swaps. No extra classes needed.</p>
            </CardHeader>
        </Card>
    </div>

    <!-- Quick Preview -->
    <div class="w-full max-w-4xl pt-8 space-y-6 text-left">
        <h2 class="text-2xl font-bold text-foreground">Quick Preview</h2>

        <div class="rounded-lg border bg-card p-6 space-y-4">
            <div class="flex flex-wrap gap-2">
                <Button>Primary</Button>
                <Button Variant="Button.ButtonVariant.Secondary">Secondary</Button>
                <Button Variant="Button.ButtonVariant.Destructive">Destructive</Button>
                <Button Variant="Button.ButtonVariant.Outline">Outline</Button>
                <Button Variant="Button.ButtonVariant.Ghost">Ghost</Button>
            </div>

            <Separator />

            <div class="flex items-center gap-4">
                <Badge>Default</Badge>
                <Badge Variant="Badge.BadgeVariant.Secondary">Secondary</Badge>
                <Badge Variant="Badge.BadgeVariant.Outline">Outline</Badge>
                <Badge Variant="Badge.BadgeVariant.Destructive">Destructive</Badge>
            </div>

            <Separator />

            <div class="flex items-center gap-6">
                <Switch @bind-Checked="_switchOn" />
                <div class="w-64">
                    <Slider @bind-Value="_sliderVal" />
                </div>
                <Toggle @bind-Pressed="_togglePressed">
                    <Blazicon Svg="Lucide.Bold" class="h-4 w-4" />
                </Toggle>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _switchOn = true;
    private double _sliderVal = 50;
    private bool _togglePressed;
}
