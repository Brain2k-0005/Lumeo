@page "/components/sidebar"

<PageTitle>Sidebar — Lumeo</PageTitle>

<PageHeader Title="Sidebar" Description="A collapsible sidebar layout with groups, menus, header, and footer." />

<div class="space-y-8">
    <ComponentDemo Title="Minimal" Code="@_minimalCode">
        <div class="h-64 rounded-lg border overflow-hidden">
            <SidebarProvider @bind-IsCollapsed="_isCollapsed2">
                <SidebarComponent>
                    <SidebarContent>
                        <SidebarGroup>
                            <SidebarMenu>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#" IsActive="true">
                                        <DynamicIcon Name="House" Class="h-4 w-4" />
                                        <span>Home</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="User" Class="h-4 w-4" />
                                        <span>Profile</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Bell" Class="h-4 w-4" />
                                        <span>Notifications</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Settings" Class="h-4 w-4" />
                                        <span>Settings</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                            </SidebarMenu>
                        </SidebarGroup>
                    </SidebarContent>
                </SidebarComponent>
                <main class="flex-1 p-4">
                    <SidebarTrigger />
                    <p class="text-sm text-muted-foreground mt-2">Page content</p>
                </main>
            </SidebarProvider>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="h-[400px] rounded-lg border overflow-hidden">
            <SidebarProvider @bind-IsCollapsed="_isCollapsed">
                <SidebarComponent>
                    <SidebarHeader>
                        <div class="flex items-center gap-2 px-2">
                            <div class="h-6 w-6 rounded bg-primary"></div>
                            <span class="font-semibold text-sm text-foreground">Acme Inc</span>
                        </div>
                    </SidebarHeader>
                    <SidebarContent>
                        <SidebarGroup>
                            <SidebarGroupLabel>Platform</SidebarGroupLabel>
                            <SidebarMenu>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#" IsActive="true">
                                        <DynamicIcon Name="House" Class="h-4 w-4" />
                                        <span>Dashboard</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Settings" Class="h-4 w-4" />
                                        <span>Settings</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                            </SidebarMenu>
                        </SidebarGroup>
                        <SidebarSeparator />
                        <SidebarGroup>
                            <SidebarGroupLabel>Projects</SidebarGroupLabel>
                            <SidebarMenu>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Star" Class="h-4 w-4" />
                                        <span>Favorites</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                            </SidebarMenu>
                        </SidebarGroup>
                    </SidebarContent>
                    <SidebarFooter>
                        <div class="flex items-center gap-2 px-2">
                            <Avatar Src="" Fallback="CN" />
                            <span class="text-sm text-foreground">User</span>
                        </div>
                    </SidebarFooter>
                </SidebarComponent>
                <main class="flex-1 p-6">
                    <SidebarTrigger />
                    <p class="text-sm text-muted-foreground mt-4">Main content area. Use the trigger button to collapse the sidebar.</p>
                </main>
            </SidebarProvider>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Multi-Group" Code="@_multiGroupCode">
        <div class="h-[400px] rounded-lg border overflow-hidden">
            <SidebarProvider @bind-IsCollapsed="_isCollapsed3">
                <SidebarComponent>
                    <SidebarHeader>
                        <div class="flex items-center gap-2 px-2">
                            <div class="h-6 w-6 rounded bg-primary"></div>
                            <span class="font-semibold text-sm text-foreground">Workspace</span>
                        </div>
                    </SidebarHeader>
                    <SidebarContent>
                        <SidebarGroup>
                            <SidebarGroupLabel>Main</SidebarGroupLabel>
                            <SidebarMenu>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#" IsActive="true">
                                        <DynamicIcon Name="House" Class="h-4 w-4" />
                                        <span>Home</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Search" Class="h-4 w-4" />
                                        <span>Search</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                            </SidebarMenu>
                        </SidebarGroup>
                        <SidebarSeparator />
                        <SidebarGroup>
                            <SidebarGroupLabel>Team</SidebarGroupLabel>
                            <SidebarMenu>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="User" Class="h-4 w-4" />
                                        <span>Members</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Bell" Class="h-4 w-4" />
                                        <span>Notifications</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                                <SidebarMenuItem>
                                    <SidebarMenuButton Href="#">
                                        <DynamicIcon Name="Settings" Class="h-4 w-4" />
                                        <span>Settings</span>
                                    </SidebarMenuButton>
                                </SidebarMenuItem>
                            </SidebarMenu>
                        </SidebarGroup>
                    </SidebarContent>
                </SidebarComponent>
                <main class="flex-1 p-6">
                    <SidebarTrigger />
                    <p class="text-sm text-muted-foreground mt-4">Multi-group sidebar layout.</p>
                </main>
            </SidebarProvider>
        </div>
    </ComponentDemo>
</div>

