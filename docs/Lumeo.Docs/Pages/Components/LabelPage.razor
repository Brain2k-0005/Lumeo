@page "/components/label"

<PageTitle>Label — Lumeo</PageTitle>

<PageHeader Title="Label" Description="A text label for form controls." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="space-y-2 w-full max-w-sm">
            <Label>Email address</Label>
            <Input Type="email" Placeholder="you@example.com" />
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Required Field" Code="@_requiredCode">
        <div class="w-full max-w-sm space-y-4">
            <div class="space-y-2">
                <div class="flex items-center gap-1">
                    <Label>Email address</Label>
                    <span class="text-destructive text-sm">*</span>
                </div>
                <Input type="email" placeholder="you@example.com" />
                <p class="text-xs text-muted-foreground">We'll never share your email with anyone.</p>
            </div>
            <div class="space-y-2">
                <div class="flex items-center justify-between">
                    <Label>Password</Label>
                    <a href="#" class="text-xs text-primary hover:underline no-underline">Forgot password?</a>
                </div>
                <Input type="password" placeholder="••••••••" />
            </div>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Multiple Fields" Code="@_multipleCode">
        <div class="w-full max-w-sm space-y-4">
            <div class="space-y-2">
                <Label>First name</Label>
                <Input Placeholder="John" />
            </div>
            <div class="space-y-2">
                <Label>Last name</Label>
                <Input Placeholder="Doe" />
            </div>
            <div class="flex items-center gap-2">
                <Checkbox @bind-Checked="_agreed" />
                <Label>I agree to the terms and conditions</Label>
            </div>
        </div>
    </ComponentDemo>
</div>

@code {
    private bool _agreed;

    private string _defaultCode = @"<Label>Email address</Label>
<Input Type=""email"" Placeholder=""you@example.com"" />";

    private string _requiredCode = @"<div class=""space-y-2"">
    <div class=""flex items-center gap-1"">
        <Label>Email address</Label>
        <span class=""text-destructive text-sm"">*</span>
    </div>
    <Input type=""email"" placeholder=""you@example.com"" />
    <p class=""text-xs text-muted-foreground"">We'll never share your email.</p>
</div>
<div class=""space-y-2"">
    <div class=""flex items-center justify-between"">
        <Label>Password</Label>
        <a href=""#"" class=""text-xs text-primary hover:underline"">Forgot password?</a>
    </div>
    <Input type=""password"" placeholder=""••••••••"" />
</div>";

    private string _multipleCode = @"<div class=""space-y-2"">
    <Label>First name</Label>
    <Input Placeholder=""John"" />
</div>
<div class=""flex items-center gap-2"">
    <Checkbox @bind-Checked=""_agreed"" />
    <Label>I agree to the terms and conditions</Label>
</div>";
}
