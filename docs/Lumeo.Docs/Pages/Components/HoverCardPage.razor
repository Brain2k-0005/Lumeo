@page "/components/hover-card"

<PageTitle>Hover Card â€” Lumeo</PageTitle>

<PageHeader Title="Hover Card" Description="A card that appears when hovering over an element, showing additional information." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <HoverCard>
            <HoverCardTrigger>
                <Button Variant="Button.ButtonVariant.Link">@@blazor</Button>
            </HoverCardTrigger>
            <HoverCardContent>
                <div class="flex justify-between space-x-4">
                    <div class="space-y-1">
                        <h4 class="text-sm font-semibold">@@blazor</h4>
                        <p class="text-sm text-muted-foreground">
                            A free and open-source web framework for building interactive web UIs using C#.
                        </p>
                        <div class="flex items-center pt-2">
                            <span class="text-xs text-muted-foreground">Joined December 2018</span>
                        </div>
                    </div>
                </div>
            </HoverCardContent>
        </HoverCard>
    </ComponentDemo>

    <ComponentDemo Title="Alignment" Code="@_alignCode">
        <div class="flex gap-8">
            <HoverCard>
                <HoverCardTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Start</Button>
                </HoverCardTrigger>
                <HoverCardContent Align="HoverCardContent.HoverCardAlign.Start">
                    <p class="text-sm">This hover card is aligned to the start.</p>
                </HoverCardContent>
            </HoverCard>
            <HoverCard>
                <HoverCardTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Center</Button>
                </HoverCardTrigger>
                <HoverCardContent Align="HoverCardContent.HoverCardAlign.Center">
                    <p class="text-sm">This hover card is centered.</p>
                </HoverCardContent>
            </HoverCard>
            <HoverCard>
                <HoverCardTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">End</Button>
                </HoverCardTrigger>
                <HoverCardContent Align="HoverCardContent.HoverCardAlign.End">
                    <p class="text-sm">This hover card is aligned to the end.</p>
                </HoverCardContent>
            </HoverCard>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="User Profile" Code="@_profileCode">
        <p class="text-sm text-muted-foreground">
            Created by
            <HoverCard>
                <HoverCardTrigger>
                    <span class="font-medium text-foreground underline underline-offset-4 cursor-pointer">Jane Smith</span>
                </HoverCardTrigger>
                <HoverCardContent>
                    <div class="space-y-2">
                        <h4 class="text-sm font-semibold">Jane Smith</h4>
                        <p class="text-sm text-muted-foreground">Senior Developer at Acme Inc.</p>
                        <div class="flex items-center gap-2 text-xs text-muted-foreground">
                            <span>42 repositories</span>
                            <span>128 followers</span>
                        </div>
                    </div>
                </HoverCardContent>
            </HoverCard>
            on March 15, 2024.
        </p>
    </ComponentDemo>
</div>

