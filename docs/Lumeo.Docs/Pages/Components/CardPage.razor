@page "/components/card"

<PageTitle>Card â€” Lumeo</PageTitle>

<PageHeader Title="Card" Description="Displays a card with header, content, and footer." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="w-full max-w-sm">
            <Card>
                <CardHeader>
                    <h3 class="text-lg font-semibold leading-none tracking-tight">Notifications</h3>
                    <p class="text-sm text-muted-foreground">You have 3 unread messages.</p>
                </CardHeader>
                <CardContent>
                    <p class="text-sm">Your recent notifications will appear here. Stay up to date with the latest updates.</p>
                </CardContent>
                <CardFooter>
                    <Button Class="w-full">Mark all as read</Button>
                </CardFooter>
            </Card>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Card with Actions" Code="@_actionsCode">
        <div class="w-full max-w-sm">
            <Card>
                <CardHeader>
                    <h3 class="text-lg font-semibold leading-none tracking-tight">Blog Post</h3>
                    <p class="text-sm text-muted-foreground">Published on Jan 12, 2025</p>
                </CardHeader>
                <CardContent>
                    <p class="text-sm text-foreground">Learn how to build accessible, composable UI components using Blazor and Tailwind CSS in this in-depth guide.</p>
                </CardContent>
                <CardFooter>
                    <div class="flex gap-2 w-full">
                        <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">
                            <Blazicon Svg="Lucide.Copy" class="h-4 w-4" /> Edit
                        </Button>
                        <Button Variant="Button.ButtonVariant.Destructive" Size="Button.ButtonSize.Sm">
                            <Blazicon Svg="Lucide.Trash" class="h-4 w-4" /> Delete
                        </Button>
                    </div>
                </CardFooter>
            </Card>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Horizontal Card" Code="@_horizontalCode">
        <div class="w-full max-w-md">
            <Card>
                <div class="flex">
                    <div class="w-32 rounded-l-lg bg-muted flex items-center justify-center shrink-0">
                        <Blazicon Svg="Lucide.Star" class="h-10 w-10 text-muted-foreground" />
                    </div>
                    <div class="flex flex-col flex-1">
                        <CardHeader>
                            <h3 class="text-base font-semibold leading-none tracking-tight">Featured Article</h3>
                            <p class="text-sm text-muted-foreground">5 min read</p>
                        </CardHeader>
                        <CardContent>
                            <p class="text-sm text-muted-foreground">An introduction to modern component-driven design systems.</p>
                        </CardContent>
                        <CardFooter>
                            <Button Variant="Button.ButtonVariant.Link" Class="px-0">Read more</Button>
                        </CardFooter>
                    </div>
                </div>
            </Card>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Form" Code="@_formCode">
        <div class="w-full max-w-sm">
            <Card>
                <CardHeader>
                    <h3 class="text-lg font-semibold leading-none tracking-tight">Create project</h3>
                    <p class="text-sm text-muted-foreground">Deploy your new project in one click.</p>
                </CardHeader>
                <CardContent>
                    <div class="space-y-4">
                        <div class="space-y-2">
                            <label class="text-sm font-medium leading-none">Name</label>
                            <Input placeholder="Name of your project" />
                        </div>
                        <div class="space-y-2">
                            <label class="text-sm font-medium leading-none">Description</label>
                            <Input placeholder="Describe your project" />
                        </div>
                    </div>
                </CardContent>
                <CardFooter>
                    <div class="flex justify-between w-full">
                        <Button Variant="Button.ButtonVariant.Outline">Cancel</Button>
                        <Button>Deploy</Button>
                    </div>
                </CardFooter>
            </Card>
        </div>
    </ComponentDemo>
</div>

