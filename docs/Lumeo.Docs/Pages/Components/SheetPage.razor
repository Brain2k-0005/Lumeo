<PageHeader Title="Sheet" Description="A panel that slides in from the edge of the screen, typically used for navigation or forms." />

<div class="space-y-8">
    <ComponentDemo Title="Default (Right)" Code="@_defaultCode">
        <Sheet @bind-IsOpen="_isOpen">
            <SheetTrigger>
                <Button Variant="Button.ButtonVariant.Outline">Open Sheet</Button>
            </SheetTrigger>
            <SheetContent>
                <SheetHeader>
                    <SheetTitle>Edit Profile</SheetTitle>
                    <SheetDescription>Make changes to your profile here. Click save when you're done.</SheetDescription>
                </SheetHeader>
                <div class="grid gap-4 py-4">
                    <div class="grid grid-cols-4 items-center gap-4">
                        <label class="text-right text-sm font-medium">Name</label>
                        <Input Class="col-span-3" Value="John Doe" />
                    </div>
                    <div class="grid grid-cols-4 items-center gap-4">
                        <label class="text-right text-sm font-medium">Username</label>
                        <Input Class="col-span-3" Value="@("@johndoe")" />
                    </div>
                </div>
                <SheetFooter>
                    <SheetClose>
                        <Button>Save Changes</Button>
                    </SheetClose>
                </SheetFooter>
            </SheetContent>
        </Sheet>
    </ComponentDemo>

    <ComponentDemo Title="Side Variations" Code="@_sideCode">
        <div class="flex flex-wrap gap-2">
            <Sheet @bind-IsOpen="_isTopOpen">
                <SheetTrigger>
                    <Button Variant="Button.ButtonVariant.Outline">Top</Button>
                </SheetTrigger>
                <SheetContent Side="SheetContent.SheetSide.Top">
                    <SheetHeader>
                        <SheetTitle>Top Sheet</SheetTitle>
                        <SheetDescription>This sheet slides in from the top.</SheetDescription>
                    </SheetHeader>
                </SheetContent>
            </Sheet>
            <Sheet @bind-IsOpen="_isRightOpen">
                <SheetTrigger>
                    <Button Variant="Button.ButtonVariant.Outline">Right</Button>
                </SheetTrigger>
                <SheetContent Side="SheetContent.SheetSide.Right">
                    <SheetHeader>
                        <SheetTitle>Right Sheet</SheetTitle>
                        <SheetDescription>This sheet slides in from the right.</SheetDescription>
                    </SheetHeader>
                </SheetContent>
            </Sheet>
            <Sheet @bind-IsOpen="_isBottomOpen">
                <SheetTrigger>
                    <Button Variant="Button.ButtonVariant.Outline">Bottom</Button>
                </SheetTrigger>
                <SheetContent Side="SheetContent.SheetSide.Bottom">
                    <SheetHeader>
                        <SheetTitle>Bottom Sheet</SheetTitle>
                        <SheetDescription>This sheet slides in from the bottom.</SheetDescription>
                    </SheetHeader>
                </SheetContent>
            </Sheet>
            <Sheet @bind-IsOpen="_isLeftOpen">
                <SheetTrigger>
                    <Button Variant="Button.ButtonVariant.Outline">Left</Button>
                </SheetTrigger>
                <SheetContent Side="SheetContent.SheetSide.Left">
                    <SheetHeader>
                        <SheetTitle>Left Sheet</SheetTitle>
                        <SheetDescription>This sheet slides in from the left.</SheetDescription>
                    </SheetHeader>
                </SheetContent>
            </Sheet>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Navigation Sheet" Code="@_navCode">
        <Sheet @bind-IsOpen="_isNavOpen">
            <SheetTrigger>
                <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                    <Blazicon Svg="Lucide.Menu" class="h-4 w-4" />
                </Button>
            </SheetTrigger>
            <SheetContent Side="SheetContent.SheetSide.Left">
                <SheetHeader>
                    <SheetTitle>Navigation</SheetTitle>
                    <SheetDescription>Browse the application.</SheetDescription>
                </SheetHeader>
                <nav class="flex flex-col gap-2 py-4">
                    <SheetClose>
                        <span class="block w-full rounded-md px-3 py-2 text-sm font-medium hover:bg-accent cursor-pointer">Home</span>
                    </SheetClose>
                    <SheetClose>
                        <span class="block w-full rounded-md px-3 py-2 text-sm font-medium hover:bg-accent cursor-pointer">About</span>
                    </SheetClose>
                    <SheetClose>
                        <span class="block w-full rounded-md px-3 py-2 text-sm font-medium hover:bg-accent cursor-pointer">Services</span>
                    </SheetClose>
                    <SheetClose>
                        <span class="block w-full rounded-md px-3 py-2 text-sm font-medium hover:bg-accent cursor-pointer">Contact</span>
                    </SheetClose>
                </nav>
            </SheetContent>
        </Sheet>
    </ComponentDemo>
</div>

