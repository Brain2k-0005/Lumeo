        <SelectItem Value=""cherry"">Cherry</SelectItem>
    </SelectContent>
</Select>

@code {
    private string? _selected;
}";

    private string _bindingCode = @"<Select @bind-Value=""_selected"">
    <SelectTrigger>
        <span>@(_selected ?? ""Select a framework"")</span>
    </SelectTrigger>
    <SelectContent>
        <SelectItem Value=""blazor"">Blazor</SelectItem>
        <SelectItem Value=""react"">React</SelectItem>
        <SelectItem Value=""vue"">Vue</SelectItem>
    </SelectContent>
</Select>
<p>Selected: @(_selected ?? ""none"")</p>";

    private string _groupCode = @"<Select @bind-Value=""_selected"">
