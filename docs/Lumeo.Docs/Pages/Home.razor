                        <span class="text-sm text-muted-foreground">@(_switchOn ? "On" : "Off")</span>
                    </div>
                    <div class="w-48">
                        <Slider @bind-Value="_sliderVal" />
                    </div>
                    <Toggle @bind-Pressed="_togglePressed">
