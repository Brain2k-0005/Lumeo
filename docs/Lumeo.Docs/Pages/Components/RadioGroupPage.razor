        <Label>Comfortable</Label>
    </div>
    <div class=""flex items-center gap-2"">
        <RadioGroupItem Value=""compact"" />
        <Label>Compact</Label>
    </div>
</RadioGroup>";

    private string _planCode = @"<RadioGroup @bind-Value=""_plan"" Class=""grid grid-cols-3 gap-2"">
    @foreach (var p in new[] { (""free"", ""Free"", ""$0""), (""pro"", ""Pro"", ""$15""), (""team"", ""Team"", ""$49"") })
    {
        <label class=""@($""flex flex-col items-center rounded-md border-2 p-3 cursor-pointer {(_plan == p.Item1 ? \""border-primary\"" : \""border-muted\"")}"")>
            <RadioGroupItem Value=""@p.Item1"" Class=""sr-only"" />
            <span class=""text-sm font-semibold"">@p.Item2</span>
