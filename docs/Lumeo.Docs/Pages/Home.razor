                    <Checkbox @bind-Checked="_checkOn" />
                </div>
            </div>

            <Separator />

            <!-- Alert -->
            <div class="space-y-2">
                <p class="text-xs font-medium text-muted-foreground uppercase tracking-wide">Alerts</p>
                <Alert>
                    <p class="font-medium text-foreground">Heads up!</p>
                    <p class="text-muted-foreground mt-1">You can add components to your app using the NuGet package.</p>
                </Alert>
