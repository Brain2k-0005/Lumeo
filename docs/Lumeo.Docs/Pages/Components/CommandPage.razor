<PageHeader Title="Command" Description="A command palette for searching and executing actions." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="w-full max-w-md rounded-lg border shadow-md">
            <Command>
                <CommandInput Placeholder="Type a command or search..." />
                <CommandList>
                    <CommandGroup Heading="Suggestions">
                        <CommandItem>
                            <Blazicon Svg="Lucide.Calendar" class="mr-2 h-4 w-4" />
                            <span>Calendar</span>
                        </CommandItem>
                        <CommandItem>
                            <Blazicon Svg="Lucide.Search" class="mr-2 h-4 w-4" />
                            <span>Search</span>
                        </CommandItem>
                        <CommandItem>
                            <Blazicon Svg="Lucide.Settings" class="mr-2 h-4 w-4" />
                            <span>Settings</span>
                        </CommandItem>
                    </CommandGroup>
                    <CommandSeparator />
                    <CommandGroup Heading="Actions">
                        <CommandItem>
                            <Blazicon Svg="Lucide.User" class="mr-2 h-4 w-4" />
                            <span>Profile</span>
                        </CommandItem>
                        <CommandItem>
                            <Blazicon Svg="Lucide.Mail" class="mr-2 h-4 w-4" />
                            <span>Mail</span>
                        </CommandItem>
                    </CommandGroup>
                </CommandList>
            </Command>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Compact" Code="@_compactCode">
        <div class="w-full max-w-sm rounded-lg border shadow-md">
            <Command>
                <CommandInput Placeholder="Search..." />
                <CommandList>
                    <CommandGroup>
                        <CommandItem>New File</CommandItem>
                        <CommandItem>Open File</CommandItem>
                        <CommandItem>Save</CommandItem>
                    </CommandGroup>
                </CommandList>
            </Command>
        </div>
    </ComponentDemo>
</div>

