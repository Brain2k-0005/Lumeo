@page "/components/toggle-group"

<PageTitle>Toggle Group â€” Lumeo</PageTitle>

<PageHeader Title="Toggle Group" Description="A set of two-state buttons that can be toggled on or off." />

<div class="space-y-8">
    <ComponentDemo Title="Single Selection" Code="@_singleCode">
        <ToggleGroup Type="ToggleGroup.ToggleGroupType.Single">
            <ToggleGroupItem Value="bold">
                <Blazicon Svg="Lucide.Bold" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="italic">
                <Blazicon Svg="Lucide.Italic" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="underline">
                <Blazicon Svg="Lucide.Underline" class="h-4 w-4" />
            </ToggleGroupItem>
        </ToggleGroup>
    </ComponentDemo>

    <ComponentDemo Title="Multiple Selection" Code="@_multipleCode">
        <ToggleGroup Type="ToggleGroup.ToggleGroupType.Multiple">
            <ToggleGroupItem Value="bold">
                <Blazicon Svg="Lucide.Bold" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="italic">
                <Blazicon Svg="Lucide.Italic" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="underline">
                <Blazicon Svg="Lucide.Underline" class="h-4 w-4" />
            </ToggleGroupItem>
        </ToggleGroup>
    </ComponentDemo>

    <ComponentDemo Title="Outline Variant" Code="@_outlineCode">
        <ToggleGroup Type="ToggleGroup.ToggleGroupType.Single" Variant="ToggleGroup.ToggleGroupVariant.Outline">
            <ToggleGroupItem Value="left">
                <Blazicon Svg="Lucide.AlignLeft" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="center">
                <Blazicon Svg="Lucide.AlignCenter" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="right">
                <Blazicon Svg="Lucide.AlignRight" class="h-4 w-4" />
            </ToggleGroupItem>
        </ToggleGroup>
    </ComponentDemo>

    <ComponentDemo Title="Sizes" Code="@_sizeCode">
        <div class="space-y-4">
            <ToggleGroup Type="ToggleGroup.ToggleGroupType.Single" Size="ToggleGroup.ToggleGroupSize.Sm">
                <ToggleGroupItem Value="bold">
                    <Blazicon Svg="Lucide.Bold" class="h-3 w-3" />
                </ToggleGroupItem>
                <ToggleGroupItem Value="italic">
                    <Blazicon Svg="Lucide.Italic" class="h-3 w-3" />
                </ToggleGroupItem>
                <ToggleGroupItem Value="underline">
                    <Blazicon Svg="Lucide.Underline" class="h-3 w-3" />
                </ToggleGroupItem>
            </ToggleGroup>

            <ToggleGroup Type="ToggleGroup.ToggleGroupType.Single">
                <ToggleGroupItem Value="bold">
                    <Blazicon Svg="Lucide.Bold" class="h-4 w-4" />
                </ToggleGroupItem>
                <ToggleGroupItem Value="italic">
                    <Blazicon Svg="Lucide.Italic" class="h-4 w-4" />
                </ToggleGroupItem>
                <ToggleGroupItem Value="underline">
                    <Blazicon Svg="Lucide.Underline" class="h-4 w-4" />
                </ToggleGroupItem>
            </ToggleGroup>

            <ToggleGroup Type="ToggleGroup.ToggleGroupType.Single" Size="ToggleGroup.ToggleGroupSize.Lg">
                <ToggleGroupItem Value="bold">
                    <Blazicon Svg="Lucide.Bold" class="h-5 w-5" />
                </ToggleGroupItem>
                <ToggleGroupItem Value="italic">
                    <Blazicon Svg="Lucide.Italic" class="h-5 w-5" />
                </ToggleGroupItem>
                <ToggleGroupItem Value="underline">
                    <Blazicon Svg="Lucide.Underline" class="h-5 w-5" />
                </ToggleGroupItem>
            </ToggleGroup>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Disabled Items" Code="@_disabledCode">
        <ToggleGroup Type="ToggleGroup.ToggleGroupType.Multiple">
            <ToggleGroupItem Value="bold">
                <Blazicon Svg="Lucide.Bold" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="italic" Disabled="true">
                <Blazicon Svg="Lucide.Italic" class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem Value="underline">
                <Blazicon Svg="Lucide.Underline" class="h-4 w-4" />
            </ToggleGroupItem>
        </ToggleGroup>
    </ComponentDemo>
</div>

