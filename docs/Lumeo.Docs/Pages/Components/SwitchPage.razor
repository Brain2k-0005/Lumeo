@page "/components/switch"

<PageTitle>Switch — Lumeo</PageTitle>

<PageHeader Title="Switch" Description="A control that allows the user to toggle between two states." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="flex items-center gap-2">
            <Switch @bind-Checked="_checked1" />
            <label class="text-sm font-medium leading-none">Airplane Mode</label>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Binding" Code="@_bindingCode">
        <div class="space-y-4">
            <div class="flex items-center gap-2">
                <Switch @bind-Checked="_checked2" />
                <label class="text-sm font-medium leading-none">Dark Mode</label>
            </div>
            <p class="text-sm text-muted-foreground">Dark Mode is @(_checked2 ? "on" : "off")</p>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Disabled" Code="@_disabledCode">
        <div class="space-y-3">
            <div class="flex items-center gap-2">
                <Switch Checked="false" Disabled="true" />
                <label class="text-sm font-medium leading-none text-muted-foreground">Disabled off</label>
            </div>
            <div class="flex items-center gap-2">
                <Switch Checked="true" Disabled="true" />
                <label class="text-sm font-medium leading-none text-muted-foreground">Disabled on</label>
            </div>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Settings Example" Code="@_settingsCode">
        <div class="w-full max-w-sm space-y-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium leading-none">Email Notifications</p>
                    <p class="text-sm text-muted-foreground">Receive emails about account activity.</p>
                </div>
                <Switch @bind-Checked="_emailNotif" />
            </div>
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium leading-none">Marketing Emails</p>
                    <p class="text-sm text-muted-foreground">Receive emails about new products and features.</p>
                </div>
                <Switch @bind-Checked="_marketingNotif" />
            </div>
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium leading-none">Security Alerts</p>
                    <p class="text-sm text-muted-foreground">Receive alerts about unusual activity.</p>
                </div>
                <Switch @bind-Checked="_securityNotif" />
            </div>
        </div>
    </ComponentDemo>
</div>

<!-- API Reference -->
<div class="mt-12 space-y-6">
    <h2 class="text-2xl font-bold text-foreground">API Reference</h2>

    <div class="space-y-8">
        <div>
            <h3 class="text-lg font-semibold text-foreground mb-3">Switch</h3>
            <div class="rounded-lg border border-border overflow-hidden">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b bg-muted/40">
                            <th class="text-left p-3 font-medium text-foreground">Property</th>
                            <th class="text-left p-3 font-medium text-foreground">Type</th>
                            <th class="text-left p-3 font-medium text-foreground">Default</th>
                            <th class="text-left p-3 font-medium text-foreground">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border/40">
                        <tr>
                            <td class="p-3 font-mono text-xs text-primary">Checked</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">bool</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">false</td>
                            <td class="p-3 text-muted-foreground">Whether the switch is toggled on. Use with @@bind-Checked for two-way binding.</td>
                        </tr>
                        <tr>
                            <td class="p-3 font-mono text-xs text-primary">CheckedChanged</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">EventCallback&lt;bool&gt;</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">—</td>
                            <td class="p-3 text-muted-foreground">Callback invoked when the switch state changes.</td>
                        </tr>
                        <tr>
                            <td class="p-3 font-mono text-xs text-primary">Disabled</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">bool</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">false</td>
                            <td class="p-3 text-muted-foreground">When true, prevents user interaction and dims the switch.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _checked1;
    private bool _checked2 = true;
    private bool _emailNotif = true;
    private bool _marketingNotif;
    private bool _securityNotif = true;

    private string _defaultCode = @"<div class=""flex items-center gap-2"">
    <Switch @bind-Checked=""_checked"" />
    <label class=""text-sm font-medium leading-none"">Airplane Mode</label>
</div>

@code {
    private bool _checked;
}";

    private string _bindingCode = @"<Switch @bind-Checked=""_checked"" />
<p>Dark Mode is @(_checked ? ""on"" : ""off"")</p>

@code {
    private bool _checked = true;
}";

    private string _disabledCode = @"<Switch Checked=""false"" Disabled=""true"" />
<Switch Checked=""true"" Disabled=""true"" />";

    private string _settingsCode = @"<div class=""flex items-center justify-between"">
    <div>
        <p class=""text-sm font-medium"">Email Notifications</p>
        <p class=""text-sm text-muted-foreground"">Receive emails about account activity.</p>
    </div>
    <Switch @bind-Checked=""_emailNotif"" />
</div>";
}
