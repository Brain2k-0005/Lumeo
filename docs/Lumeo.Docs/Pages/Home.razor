        </div>

        <div class="border-t px-6 py-3 bg-muted/20 flex items-center justify-between">
            <span class="text-xs text-muted-foreground">Live interactive preview</span>
            <a href="components" class="text-xs text-primary hover:underline no-underline flex items-center gap-1">
                See all 54+ components
                <Blazicon Svg="Lucide.ArrowRight" class="h-3 w-3" />
            </a>
        </div>
    </div>
</div>

@code {
    private bool _switchOn = true;
    private double _sliderVal = 50;
    private bool _togglePressed;
    private bool _checkOn = true;
    private bool _installCopied;

    private async Task CopyInstall()
    {
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", "dotnet add package Lumeo");
        _installCopied = true;
        StateHasChanged();
        await Task.Delay(2000);
        _installCopied = false;
        StateHasChanged();
    }
}

