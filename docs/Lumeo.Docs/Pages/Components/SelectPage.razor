@page "/components/select"

<PageTitle>Select â€” Lumeo</PageTitle>

<PageHeader Title="Select" Description="Displays a dropdown list of options for the user to pick from." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="w-full max-w-sm">
            <Select @bind-Value="_selectedFruit">
                <SelectTrigger>
                    <span class="@(_selectedFruit == null ? "text-muted-foreground" : "")">
                        @(_selectedFruit ?? "Select a fruit")
                    </span>
                </SelectTrigger>
                <SelectContent>
                    <SelectItem Value="apple">Apple</SelectItem>
                    <SelectItem Value="banana">Banana</SelectItem>
                    <SelectItem Value="cherry">Cherry</SelectItem>
                    <SelectItem Value="grape">Grape</SelectItem>
                    <SelectItem Value="orange">Orange</SelectItem>
                </SelectContent>
            </Select>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Binding" Code="@_bindingCode">
        <div class="w-full max-w-sm space-y-2">
            <Select @bind-Value="_selectedFramework">
                <SelectTrigger>
                    <span class="@(_selectedFramework == null ? "text-muted-foreground" : "")">
                        @(_selectedFramework ?? "Select a framework")
                    </span>
                </SelectTrigger>
                <SelectContent>
                    <SelectItem Value="blazor">Blazor</SelectItem>
                    <SelectItem Value="react">React</SelectItem>
                    <SelectItem Value="vue">Vue</SelectItem>
                    <SelectItem Value="angular">Angular</SelectItem>
                    <SelectItem Value="svelte">Svelte</SelectItem>
                </SelectContent>
            </Select>
            <p class="text-sm text-muted-foreground">Selected: @(_selectedFramework ?? "none")</p>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Groups" Code="@_groupCode">
        <div class="w-full max-w-sm">
            <Select @bind-Value="_selectedTimezone">
                <SelectTrigger>
                    <span class="@(_selectedTimezone == null ? "text-muted-foreground" : "")">
                        @(_selectedTimezone ?? "Select a timezone")
                    </span>
                </SelectTrigger>
                <SelectContent>
                    <SelectGroup>
                        <SelectLabel>North America</SelectLabel>
                        <SelectItem Value="est">Eastern (EST)</SelectItem>
                        <SelectItem Value="cst">Central (CST)</SelectItem>
                        <SelectItem Value="pst">Pacific (PST)</SelectItem>
                    </SelectGroup>
                    <SelectGroup>
                        <SelectLabel>Europe</SelectLabel>
                        <SelectItem Value="gmt">Greenwich (GMT)</SelectItem>
                        <SelectItem Value="cet">Central European (CET)</SelectItem>
                        <SelectItem Value="eet">Eastern European (EET)</SelectItem>
                    </SelectGroup>
                </SelectContent>
            </Select>
        </div>
    </ComponentDemo>
</div>

@code {
    private string? _selectedFruit;
    private string? _selectedFramework;
    private string? _selectedTimezone;

    private string _defaultCode = @"<Select @bind-Value=""_selected"">
    <SelectTrigger>
        <span>@(_selected ?? ""Select a fruit"")</span>
    </SelectTrigger>
    <SelectContent>
        <SelectItem Value=""apple"">Apple</SelectItem>
        <SelectItem Value=""banana"">Banana</SelectItem>
        <SelectItem Value=""cherry"">Cherry</SelectItem>
    </SelectContent>
