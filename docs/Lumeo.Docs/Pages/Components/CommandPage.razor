@page "/components/command"

<PageTitle>Command — Lumeo</PageTitle>

<PageHeader Title="Command" Description="A command palette for searching and executing actions." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <div class="w-full max-w-md rounded-lg border shadow-md">
            <Command>
                <CommandInput Placeholder="Type a command or search..." />
                <CommandList>
                    <CommandGroup Heading="Suggestions">
                        <CommandItem>
                            <DynamicIcon Name="Calendar" Class="mr-2 h-4 w-4" />
                            <span>Calendar</span>
                        </CommandItem>
                        <CommandItem>
                            <DynamicIcon Name="Search" Class="mr-2 h-4 w-4" />
                            <span>Search</span>
                        </CommandItem>
                        <CommandItem>
                            <DynamicIcon Name="Settings" Class="mr-2 h-4 w-4" />
                            <span>Settings</span>
                        </CommandItem>
                    </CommandGroup>
                    <CommandSeparator />
                    <CommandGroup Heading="Actions">
                        <CommandItem>
                            <DynamicIcon Name="User" Class="mr-2 h-4 w-4" />
                            <span>Profile</span>
                        </CommandItem>
                        <CommandItem>
                            <DynamicIcon Name="Mail" Class="mr-2 h-4 w-4" />
                            <span>Mail</span>
                        </CommandItem>
                    </CommandGroup>
                </CommandList>
            </Command>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Compact" Code="@_compactCode">
        <div class="w-full max-w-sm rounded-lg border shadow-md">
            <Command>
                <CommandInput Placeholder="Search..." />
                <CommandList>
                    <CommandGroup>
                        <CommandItem>New File</CommandItem>
                        <CommandItem>Open File</CommandItem>
                        <CommandItem>Save</CommandItem>
                    </CommandGroup>
                </CommandList>
            </Command>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Navigation" Code="@_navCode">
        <div class="w-full max-w-sm rounded-lg border shadow-md">
            <Command>
                <CommandInput Placeholder="Go to..." />
                <CommandList>
                    <CommandGroup Heading="Pages">
                        <CommandItem>
                            <DynamicIcon Name="House" Class="mr-2 h-4 w-4" />
                            <span>Dashboard</span>
                        </CommandItem>
                        <CommandItem>
                            <DynamicIcon Name="User" Class="mr-2 h-4 w-4" />
                            <span>Profile</span>
                        </CommandItem>
                        <CommandItem>
                            <DynamicIcon Name="Settings" Class="mr-2 h-4 w-4" />
                            <span>Settings</span>
                        </CommandItem>
                    </CommandGroup>
                    <CommandSeparator />
                    <CommandGroup Heading="Recent">
                        <CommandItem>
                            <DynamicIcon Name="Bell" Class="mr-2 h-4 w-4" />
                            <span>Notifications</span>
                        </CommandItem>
                        <CommandItem>
                            <DynamicIcon Name="Mail" Class="mr-2 h-4 w-4" />
                            <span>Messages</span>
                        </CommandItem>
                    </CommandGroup>
                </CommandList>
            </Command>
        </div>
    </ComponentDemo>
</div>

