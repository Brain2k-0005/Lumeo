@namespace Lumeo.Docs.Shared

<!-- Chart pattern demos — intended for inclusion on the Patterns page -->

<!-- 1. Monthly Revenue — BarChart, 2 series, Jan–Dec -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Monthly Revenue</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Year-over-year revenue comparison across all twelve months.</p>
    </div>
    <div class="p-4">
        <BarChart Categories="_revenueCategories"
                  Series="_revenueSeries"
                  Width="100%"
                  Height="300px" />
    </div>
</div>

<!-- 2. Traffic Overview — LineChart, daily data for a week -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Traffic Overview</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Daily sessions, unique visitors, and page views over the past seven days.</p>
    </div>
    <div class="p-4">
        <LineChart Categories="_trafficCategories"
                   Series="_trafficSeries"
                   Smooth="true"
                   ShowDots="true"
                   Width="100%"
                   Height="300px" />
    </div>
</div>

<!-- 3. Revenue Breakdown — PieChart by category -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Revenue Breakdown</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Distribution of revenue across product lines and service categories.</p>
    </div>
    <div class="p-4">
        <PieChart Data="_revenueBreakdownData"
                  Width="100%"
                  Height="300px" />
    </div>
</div>

<!-- 4. Performance Metrics — RadarChart, actual vs target -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Performance Metrics</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Q4 actual performance against quarterly targets across six key dimensions.</p>
    </div>
    <div class="p-4">
        <RadarChart Indicators="_perfIndicators"
                    Series="_perfSeries"
                    FillArea="true"
                    Width="100%"
                    Height="300px" />
    </div>
</div>

<!-- 5. Growth Trend — AreaChart, user growth -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Growth Trend</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Monthly active user growth and paid subscriber count over twelve months.</p>
    </div>
    <div class="p-4">
        <AreaChart Categories="_growthCategories"
                   Series="_growthSeries"
                   Smooth="true"
                   Gradient="true"
                   Width="100%"
                   Height="300px" />
    </div>
</div>

<!-- 6. Sales Comparison — Stacked BarChart -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Sales Comparison</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Stacked monthly sales by product category to show contribution mix.</p>
    </div>
    <div class="p-4">
        <BarChart Categories="_salesCategories"
                  Series="_salesSeries"
                  Stacked="true"
                  Width="100%"
                  Height="300px" />
    </div>
</div>

<!-- 7. Activity Scatter — ScatterChart, time vs engagement -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Activity Scatter</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Session duration (minutes) vs engagement score across two user cohorts.</p>
    </div>
    <div class="p-4">
        <ScatterChart Series="_activityScatterSeries"
                      Width="100%"
                      Height="300px" />
    </div>
</div>

<!-- 8. Revenue Donut — DonutChart with center label -->
<div class="border border-border rounded-lg overflow-hidden">
    <div class="px-4 pt-4 pb-2">
        <h4 class="text-sm font-semibold text-foreground">Revenue Donut</h4>
        <p class="text-xs text-muted-foreground mt-0.5">Breakdown of total ARR by subscription tier with total displayed in the center.</p>
    </div>
    <div class="p-4">
        <DonutChart Data="_revenueDonutData"
                    CenterLabel="$2.4M ARR"
                    InnerRadius="55%"
                    OuterRadius="75%"
                    Width="100%"
                    Height="300px" />
    </div>
</div>

