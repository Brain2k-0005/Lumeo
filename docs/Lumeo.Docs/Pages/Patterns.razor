@page "/patterns"
@namespace Lumeo.Docs.Pages.PatternsIndex
@using Lumeo.Services
@using Lumeo.Docs.Services
@inject IJSRuntime JS
@inject ToastService Toast
@inject PatternFilterService Filter
@implements IDisposable

<PageTitle>Patterns — Lumeo</PageTitle>

<ToastProvider Position="_toastPosition" />

<div class="space-y-8">
    <div>
        <h1 class="text-3xl font-bold tracking-tight text-foreground">Patterns</h1>
        <p class="text-muted-foreground mt-1">Live component variants built with Lumeo.</p>
    </div>

    <!-- Pattern sections -->
    <div class="space-y-10">

            <!-- â"€â"€ Accordion â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Accordion")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Accordion</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Basic Accordion" Code="@_codeAccordionBasic">
                            <Accordion Class="w-full max-w-md">
                                <AccordionItem Value="item-1">
                                    <AccordionTrigger>Is it accessible?</AccordionTrigger>
                                    <AccordionContent>Yes. It adheres to the WAI-ARIA design pattern.</AccordionContent>
                                </AccordionItem>
                                <AccordionItem Value="item-2">
                                    <AccordionTrigger>Is it styled?</AccordionTrigger>
                                    <AccordionContent>Yes. It comes with default styles that match your theme.</AccordionContent>
                                </AccordionItem>
                                <AccordionItem Value="item-3">
                                    <AccordionTrigger>Is it animated?</AccordionTrigger>
                                    <AccordionContent>Yes. It's animated by default using CSS transitions.</AccordionContent>
                                </AccordionItem>
                            </Accordion>
                        </PatternCard>

                        <PatternCard Label="Multiple Open" Code="@_codeAccordionMultiple">
                            <Accordion Type="Accordion.AccordionType.Multiple" Class="w-full max-w-md">
                                <AccordionItem Value="a">
                                    <AccordionTrigger>Section One</AccordionTrigger>
                                    <AccordionContent>Content for section one. Multiple sections can be open simultaneously.</AccordionContent>
                                </AccordionItem>
                                <AccordionItem Value="b">
                                    <AccordionTrigger>Section Two</AccordionTrigger>
                                    <AccordionContent>Content for section two.</AccordionContent>
                                </AccordionItem>
                            </Accordion>
                        </PatternCard>

                        <PatternCard Label="Compact FAQ" Code="@_codeAccordionFaq">
                            <Accordion Class="w-full max-w-md text-sm">
                                <AccordionItem Value="q1">
                                    <AccordionTrigger>What is Lumeo?</AccordionTrigger>
                                    <AccordionContent>Lumeo is a Blazor component library inspired by shadcn/ui.</AccordionContent>
                                </AccordionItem>
                                <AccordionItem Value="q2">
                                    <AccordionTrigger>How do I install it?</AccordionTrigger>
                                    <AccordionContent>Install via NuGet: <code class="font-mono bg-muted px-1 rounded">dotnet add package Lumeo</code></AccordionContent>
                                </AccordionItem>
                            </Accordion>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Alert â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Alert")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Alert</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeAlertDefault">
                            <Alert Class="w-full max-w-md">
                                <p class="font-medium text-foreground">Heads up!</p>
                                <p class="text-sm text-muted-foreground mt-1">You can add components using the NuGet package.</p>
                            </Alert>
                        </PatternCard>

                        <PatternCard Label="Destructive" Code="@_codeAlertDestructive">
                            <Alert Variant="Alert.AlertVariant.Destructive" Class="w-full max-w-md">
                                <p class="font-medium">Error</p>
                                <p class="text-sm mt-1">Your session has expired. Please sign in again.</p>
                            </Alert>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Avatar â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Avatar")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Avatar</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeAvatarDefault">
                            <Avatar>
                                <AvatarFallback>JD</AvatarFallback>
                            </Avatar>
                        </PatternCard>

                        <PatternCard Label="Small" Code="@_codeAvatarSmall">
                            <Avatar Size="Avatar.AvatarSize.Sm">
                                <AvatarFallback>AB</AvatarFallback>
                            </Avatar>
                        </PatternCard>

                        <PatternCard Label="Large" Code="@_codeAvatarLarge">
                            <Avatar Size="Avatar.AvatarSize.Lg">
                                <AvatarFallback>XY</AvatarFallback>
                            </Avatar>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Badge â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Badge")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Badge</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeBadgeDefault">
                            <Badge>Badge</Badge>
                        </PatternCard>

                        <PatternCard Label="Secondary" Code="@_codeBadgeSecondary">
                            <Badge Variant="Badge.BadgeVariant.Secondary">Secondary</Badge>
                        </PatternCard>

                        <PatternCard Label="Outline" Code="@_codeBadgeOutline">
                            <Badge Variant="Badge.BadgeVariant.Outline">Outline</Badge>
                        </PatternCard>

                        <PatternCard Label="Destructive" Code="@_codeBadgeDestructive">
                            <Badge Variant="Badge.BadgeVariant.Destructive">Destructive</Badge>
                        </PatternCard>

                        <PatternCard Label="Success" Code="@_codeBadgeSuccess">
                            <Badge Variant="Badge.BadgeVariant.Success">Success</Badge>
                        </PatternCard>

                        <PatternCard Label="Warning" Code="@_codeBadgeWarning">
                            <Badge Variant="Badge.BadgeVariant.Warning">Warning</Badge>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Button â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Button")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Button</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeButtonDefault">
                            <Button>Button</Button>
                        </PatternCard>

                        <PatternCard Label="Secondary" Code="@_codeButtonSecondary">
                            <Button Variant="Button.ButtonVariant.Secondary">Secondary</Button>
                        </PatternCard>

                        <PatternCard Label="Destructive" Code="@_codeButtonDestructive">
                            <Button Variant="Button.ButtonVariant.Destructive">Destructive</Button>
                        </PatternCard>

                        <PatternCard Label="Outline" Code="@_codeButtonOutline">
                            <Button Variant="Button.ButtonVariant.Outline">Outline</Button>
                        </PatternCard>

                        <PatternCard Label="Ghost" Code="@_codeButtonGhost">
                            <Button Variant="Button.ButtonVariant.Ghost">Ghost</Button>
                        </PatternCard>

                        <PatternCard Label="Link" Code="@_codeButtonLink">
                            <Button Variant="Button.ButtonVariant.Link">Link</Button>
                        </PatternCard>

                        <PatternCard Label="Icon Only" Code="@_codeButtonIcon">
                            <Button Variant="Button.ButtonVariant.Outline" Class="h-9 w-9 p-0">
                                <DynamicIcon Name="Plus" Class="h-4 w-4" />
                            </Button>
                        </PatternCard>

                        <PatternCard Label="Loading State" Code="@_codeButtonLoading">
                            <Button Disabled="true">
                                <Spinner Size="Spinner.SpinnerSize.Sm" Class="mr-2" />
                                Please wait
                            </Button>
                        </PatternCard>

                        <PatternCard Label="Button Group" Code="@_codeButtonGroup">
                            <div class="flex divide-x divide-border overflow-hidden rounded-md border border-border">
                                <Button Variant="Button.ButtonVariant.Ghost" Class="rounded-none h-9 px-3 text-sm">Left</Button>
                                <Button Variant="Button.ButtonVariant.Ghost" Class="rounded-none h-9 px-3 text-sm">Center</Button>
                                <Button Variant="Button.ButtonVariant.Ghost" Class="rounded-none h-9 px-3 text-sm">Right</Button>
                            </div>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Card â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Card")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Card</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Simple Card" Code="@_codeCardSimple">
                            <Card Class="w-full max-w-sm">
                                <CardHeader>
                                    <p class="text-base font-semibold text-foreground">Card Title</p>
                                    <p class="text-sm text-muted-foreground">Card description goes here.</p>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-sm text-muted-foreground">Your content lives here.</p>
                                </CardContent>
                            </Card>
                        </PatternCard>

                        <PatternCard Label="With Form" Code="@_codeCardForm">
                            <Card Class="w-full max-w-sm">
                                <CardHeader>
                                    <p class="text-base font-semibold text-foreground">Create Account</p>
                                    <p class="text-sm text-muted-foreground">Fill in your details to get started.</p>
                                </CardHeader>
                                <CardContent>
                                    <div class="space-y-3">
                                        <div class="space-y-1.5">
                                            <Label>Name</Label>
                                            <Input placeholder="Your name" />
                                        </div>
                                        <div class="space-y-1.5">
                                            <Label>Email</Label>
                                            <Input placeholder="you@example.com" />
                                        </div>
                                    </div>
                                </CardContent>
                                <CardFooter Class="gap-2">
                                    <Button Variant="Button.ButtonVariant.Outline" Class="flex-1">Cancel</Button>
                                    <Button Class="flex-1">Create</Button>
                                </CardFooter>
                            </Card>
                        </PatternCard>

                        <PatternCard Label="Stats Card" Code="@_codeCardStats">
                            <Card Class="w-full max-w-xs">
                                <CardHeader>
                                    <p class="text-sm font-medium text-muted-foreground">Total Revenue</p>
                                </CardHeader>
                                <CardContent>
                                    <p class="text-3xl font-bold text-foreground">$45,231</p>
                                    <p class="text-xs text-muted-foreground mt-1">+20.1% from last month</p>
                                </CardContent>
                            </Card>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Checkbox â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Checkbox")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Checkbox</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeCheckboxDefault">
                            <div class="flex items-center gap-2">
                                <Checkbox @bind-Checked="_checkbox1" />
                                <Label>Accept terms and conditions</Label>
                            </div>
                        </PatternCard>

                        <PatternCard Label="Checked" Code="@_codeCheckboxChecked">
                            <div class="flex items-center gap-2">
                                <Checkbox Checked="true" />
                                <Label>Enabled by default</Label>
                            </div>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Dialog â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Dialog")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Dialog</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Basic Dialog" Code="@_codeDialogBasic">
                            <Dialog @bind-IsOpen="_dialog1Open">
                                <DialogTrigger>
                                    <Button Variant="Button.ButtonVariant.Outline">Open Dialog</Button>
                                </DialogTrigger>
                                <DialogContent>
                                    <DialogHeader>
                                        <DialogTitle>Edit Profile</DialogTitle>
                                        <DialogDescription>Make changes to your profile here. Click save when done.</DialogDescription>
                                    </DialogHeader>
                                    <div class="space-y-3 py-4">
                                        <div class="space-y-1.5">
                                            <Label>Name</Label>
                                            <Input placeholder="Your name" />
                                        </div>
                                        <div class="space-y-1.5">
                                            <Label>Username</Label>
                                            <Input placeholder="username" />
                                        </div>
                                    </div>
                                    <DialogFooter>
                                        <Button OnClick="() => _dialog1Open = false">Save changes</Button>
                                    </DialogFooter>
                                </DialogContent>
                            </Dialog>
                        </PatternCard>

                        <PatternCard Label="Confirmation Dialog" Code="@_codeDialogConfirm">
                            <Dialog @bind-IsOpen="_dialog2Open">
                                <DialogTrigger>
                                    <Button Variant="Button.ButtonVariant.Destructive">Delete Account</Button>
                                </DialogTrigger>
                                <DialogContent>
                                    <DialogHeader>
                                        <DialogTitle>Are you absolutely sure?</DialogTitle>
                                        <DialogDescription>This action cannot be undone. This will permanently delete your account and remove all data.</DialogDescription>
                                    </DialogHeader>
                                    <DialogFooter>
                                        <Button Variant="Button.ButtonVariant.Outline" OnClick="() => _dialog2Open = false">Cancel</Button>
                                        <Button Variant="Button.ButtonVariant.Destructive" OnClick="() => _dialog2Open = false">Delete</Button>
                                    </DialogFooter>
                                </DialogContent>
                            </Dialog>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Input â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Input")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Input</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeInputDefault">
                            <Input placeholder="Email" Class="w-full max-w-sm" />
                        </PatternCard>

                        <PatternCard Label="With Label" Code="@_codeInputLabel">
                            <div class="w-full max-w-sm space-y-2">
                                <Label>Email</Label>
                                <Input placeholder="Enter your email" />
                            </div>
                        </PatternCard>

                        <PatternCard Label="Disabled" Code="@_codeInputDisabled">
                            <Input placeholder="Disabled input" disabled Class="w-full max-w-sm" />
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Select â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Select")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Select</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Basic Select" Code="@_codeSelectBasic">
                            <Select @bind-Value="_select1Value" @bind-IsOpen="_select1Open" Class="w-full max-w-xs">
                                <SelectTrigger>
                                    <span class="@(string.IsNullOrEmpty(_select1Value) ? "text-muted-foreground" : "")">
                                        @(string.IsNullOrEmpty(_select1Value) ? "Select a fruit" : _select1Value)
                                    </span>
                                </SelectTrigger>
                                <SelectContent>
                                    <SelectItem Value="Apple">Apple</SelectItem>
                                    <SelectItem Value="Banana">Banana</SelectItem>
                                    <SelectItem Value="Cherry">Cherry</SelectItem>
                                    <SelectItem Value="Mango">Mango</SelectItem>
                                </SelectContent>
                            </Select>
                        </PatternCard>

                        <PatternCard Label="With Groups" Code="@_codeSelectGroups">
                            <Select @bind-Value="_select2Value" @bind-IsOpen="_select2Open" Class="w-full max-w-xs">
                                <SelectTrigger>
                                    <span class="@(string.IsNullOrEmpty(_select2Value) ? "text-muted-foreground" : "")">
                                        @(string.IsNullOrEmpty(_select2Value) ? "Select timezone" : _select2Value)
                                    </span>
                                </SelectTrigger>
                                <SelectContent>
                                    <SelectGroup>
                                        <SelectLabel>North America</SelectLabel>
                                        <SelectItem Value="EST (UTC-5)">EST (UTC-5)</SelectItem>
                                        <SelectItem Value="CST (UTC-6)">CST (UTC-6)</SelectItem>
                                        <SelectItem Value="PST (UTC-8)">PST (UTC-8)</SelectItem>
                                    </SelectGroup>
                                    <SelectGroup>
                                        <SelectLabel>Europe</SelectLabel>
                                        <SelectItem Value="CET (UTC+1)">CET (UTC+1)</SelectItem>
                                        <SelectItem Value="GMT (UTC+0)">GMT (UTC+0)</SelectItem>
                                    </SelectGroup>
                                </SelectContent>
                            </Select>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Switch â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Switch")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Switch</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Default" Code="@_codeSwitchDefault">
                            <div class="flex items-center gap-2">
                                <Switch @bind-Checked="_switch1" />
                                <Label>Airplane Mode</Label>
                            </div>
                        </PatternCard>

                        <PatternCard Label="Checked" Code="@_codeSwitchChecked">
                            <div class="flex items-center gap-2">
                                <Switch Checked="true" />
                                <Label>Active</Label>
                            </div>
                        </PatternCard>

                    </div>
                </section>
            }

            <!-- â"€â"€ Tabs â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€â"€ -->
            @if (Filter.SelectedCategory == "All" || Filter.SelectedCategory == "Tabs")
            {
                <section>
                    @if (Filter.SelectedCategory == "All")
                    {
                        <h2 class="text-lg font-semibold text-foreground mb-4">Tabs</h2>
                    }
                    <div class="space-y-3">

                        <PatternCard Label="Basic Tabs" Code="@_codeTabsBasic">
                            <Tabs ActiveValue="account" Class="w-full max-w-md">
                                <TabsList>
                                    <TabsTrigger Value="account">Account</TabsTrigger>
                                    <TabsTrigger Value="password">Password</TabsTrigger>
                                </TabsList>
                                <TabsContent Value="account">
                                    <p class="text-sm text-muted-foreground pt-2">Manage your account settings here.</p>
                                </TabsContent>
                                <TabsContent Value="password">
                                    <p class="text-sm text-muted-foreground pt-2">Change your password here.</p>
                                </TabsContent>
                            </Tabs>
                        </PatternCard>

                        <PatternCard Label="Three Tabs" Code="@_codeTabsThree">
                            <Tabs ActiveValue="overview" Class="w-full max-w-md">
                                <TabsList>
                                    <TabsTrigger Value="overview">Overview</TabsTrigger>
                                    <TabsTrigger Value="analytics">Analytics</TabsTrigger>
                                    <TabsTrigger Value="reports">Reports</TabsTrigger>
                                </TabsList>
                                <TabsContent Value="overview">
                                    <p class="text-sm text-muted-foreground pt-2">Overview content goes here.</p>
                                </TabsContent>
                                <TabsContent Value="analytics">
                                    <p class="text-sm text-muted-foreground pt-2">Analytics content goes here.</p>
                                </TabsContent>
                                <TabsContent Value="reports">
                                    <p class="text-sm text-muted-foreground pt-2">Reports content goes here.</p>
                                </TabsContent>
                            </Tabs>
                        </PatternCard>

                        <PatternCard Label="With Content" Code="@_codeTabsContent">
                            <Tabs @bind-ActiveValue="_tabsActiveValue" Class="w-full max-w-md">
                                <TabsList>
                                    <TabsTrigger Value="profile">Profile</TabsTrigger>
                                    <TabsTrigger Value="settings">Settings</TabsTrigger>
                                </TabsList>
                                <TabsContent Value="profile">
                                    <div class="space-y-2 pt-2">
                                        <Label>Display Name</Label>
