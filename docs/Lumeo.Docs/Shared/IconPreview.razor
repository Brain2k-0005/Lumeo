@namespace Lumeo.Docs.Shared

@{
    var icons = GetIconsForLibrary();
    var displayIcons = Count > 0 ? icons.Take(Count).ToList() : icons;
    var cols = Count > 0 ? "grid-cols-6" : "grid-cols-6";
}
<div class="@($"{(Count > 0 ? "" : "p-3")} {Class}".Trim())" @attributes="AdditionalAttributes">
    <div class="grid @cols gap-1.5">
        @foreach (var (icon, name) in displayIcons)
        {
            <div class="flex flex-col items-center gap-0.5">
                <Blazicon Svg="@icon" class="@(Count > 0 ? "h-3.5 w-3.5 text-foreground" : "h-5 w-5 text-foreground")" />
                @if (Count == 0)
                {
                    <span class="text-[9px] text-muted-foreground truncate w-full text-center">@name</span>
                }
            </div>
        }
    </div>
    @if (Count == 0)
    {
        <p class="text-[10px] text-muted-foreground text-center mt-2">@GetIconCount() icons Â· @GetPackageName()</p>
    }
</div>

