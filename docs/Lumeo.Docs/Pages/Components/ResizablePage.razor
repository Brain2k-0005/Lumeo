            <ResizablePanelGroup Direction="ResizablePanelGroup.ResizableDirection.Horizontal" DefaultSizes="@(new double[] { 25, 50, 25 })" Class="min-h-[200px] rounded-lg border">
                <ResizablePanel Order="0">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Sidebar</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle PanelIndex="0" WithHandle="true" />
                <ResizablePanel Order="1">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Content</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle PanelIndex="1" WithHandle="true" />
                <ResizablePanel Order="2">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </ComponentDemo>
</div>

