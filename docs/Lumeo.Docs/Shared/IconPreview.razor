@code {
    [Parameter] public string Library { get; set; } = "lucide";
    [Parameter] public string? Class { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private RenderFragment RenderIcon(SvgIcon icon, string name) => __builder =>
    {
        <div class="flex flex-col items-center gap-1">
            <Blazicon Svg="@icon" class="h-5 w-5 text-foreground" />
            <span class="text-[9px] text-muted-foreground truncate w-full text-center">@name</span>
        </div>
    };

    private string GetIconCount() => Library switch
    {
        "lucide" => "1548",
        "bootstrap" => "2078",
        "fluentui" => "2406",
        "font-awesome" => "1402",
        "google-material" => "2122",
        "ionicons" => "1357",
        "material-design" => "7447",
        "devicon" => "940",
        "flag-icons" => "271",
        _ => "1548"
    };

    private string GetPackageName() => Library switch
    {
        "lucide" => "Blazicons.Lucide",
        "bootstrap" => "Blazicons.BootstrapIcons",
        "fluentui" => "Blazicons.FluentUiSystemIcons",
        "font-awesome" => "Blazicons.FontAwesome",
        "google-material" => "Blazicons.GoogleMaterialIcons",
        "ionicons" => "Blazicons.Ionicons",
        "material-design" => "Blazicons.MaterialDesignIcons",
        "devicon" => "Blazicons.Devicon",
        "flag-icons" => "Blazicons.FlagIcons",
        _ => "Blazicons.Lucide"
    };
