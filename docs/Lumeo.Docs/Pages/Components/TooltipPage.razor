@page "/components/tooltip"

<PageTitle>Tooltip â€” Lumeo</PageTitle>

<PageHeader Title="Tooltip" Description="A popup that displays information related to an element when the element receives hover focus." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <Tooltip>
            <TooltipTrigger>
                <Button Variant="Button.ButtonVariant.Outline">Hover me</Button>
            </TooltipTrigger>
            <TooltipContent>
                <p>Add to library</p>
            </TooltipContent>
        </Tooltip>
    </ComponentDemo>

    <ComponentDemo Title="Side Variations" Code="@_sideCode">
        <div class="flex gap-4">
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Top</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Top">
                    <p>Tooltip on top</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Right</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Right">
                    <p>Tooltip on right</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Bottom</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Bottom">
                    <p>Tooltip on bottom</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Left</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Left">
                    <p>Tooltip on left</p>
                </TooltipContent>
            </Tooltip>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Icons" Code="@_iconCode">
        <div class="flex gap-4">
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                        <Blazicon Svg="Lucide.Bold" class="h-4 w-4" />
                    </Button>
                </TooltipTrigger>
                <TooltipContent>
                    <p>Bold</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                        <Blazicon Svg="Lucide.Italic" class="h-4 w-4" />
                    </Button>
                </TooltipTrigger>
                <TooltipContent>
                    <p>Italic</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                        <Blazicon Svg="Lucide.Underline" class="h-4 w-4" />
                    </Button>
                </TooltipTrigger>
                <TooltipContent>
                    <p>Underline</p>
                </TooltipContent>
            </Tooltip>
        </div>
    </ComponentDemo>
</div>

