@page "/components/chart"

<PageTitle>Chart — Lumeo</PageTitle>

<PageHeader Title="Chart" Description="Beautiful charts built on Apache ECharts. Includes 25 convenience components for bar, line, area, pie, donut, radar, scatter, heatmap, treemap, sunburst, funnel, sankey, candlestick, boxplot, graph, tree, theme river, parallel, pictorial bar, waterfall, nightingale, polar bar, effect scatter, and mixed charts." />

<div class="space-y-8">

    <!-- ── Bar Chart ──────────────────────────────────────────────── -->
    <ComponentDemo Title="Bar Chart" Code="@_barCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Use bar charts to compare discrete categories side-by-side. Ideal for monthly comparisons, ranking, or showing multiple series over the same categories.</p>
            <BarChart Categories="_barCategories" Series="_barSeries" />
        </div>
    </ComponentDemo>

    <!-- ── Line Chart ─────────────────────────────────────────────── -->
    <ComponentDemo Title="Line Chart" Code="@_lineCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Line charts show trends over time. Use them when the continuity between data points matters, such as revenue tracking or performance over months.</p>
            <LineChart Categories="_lineCategories" Series="_lineSeries" Smooth="true" ShowDots="true" />
        </div>
    </ComponentDemo>

    <!-- ── Area Chart ─────────────────────────────────────────────── -->
    <ComponentDemo Title="Area Chart" Code="@_areaCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Area charts emphasize the magnitude of change over time. The filled area makes it easy to visualize volume or cumulative data.</p>
            <AreaChart Categories="_areaCategories" Series="_areaSeries" Smooth="true" Gradient="true" />
        </div>
    </ComponentDemo>

    <!-- ── Pie Chart ──────────────────────────────────────────────── -->
    <ComponentDemo Title="Pie Chart" Code="@_pieCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Pie charts show proportional distribution across categories. Best used with 5 or fewer slices to keep it readable.</p>
            <PieChart Data="_pieData" />
        </div>
    </ComponentDemo>

    <!-- ── Donut Chart ────────────────────────────────────────────── -->
    <ComponentDemo Title="Donut Chart" Code="@_donutCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Donut charts are a variant of pie charts with a center cutout, which can display a summary value or label in the middle.</p>
            <DonutChart Data="_donutData" CenterLabel="$128K" InnerRadius="55%" OuterRadius="75%" />
        </div>
    </ComponentDemo>

    <!-- ── Radar Chart ────────────────────────────────────────────── -->
    <ComponentDemo Title="Radar Chart" Code="@_radarCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Radar charts compare multiple variables on a common scale. Useful for performance profiles, skill assessments, or comparing entities across dimensions.</p>
            <RadarChart Indicators="_radarIndicators" Series="_radarSeries" FillArea="true" />
        </div>
    </ComponentDemo>

    <!-- ── Radial / Gauge Chart ───────────────────────────────────── -->
    <ComponentDemo Title="Radial / Gauge Chart" Code="@_radialCode">
        <div class="w-full">
            <p class="text-sm text-muted-foreground mb-3">Gauge charts display a single metric against a scale, making them perfect for KPIs, system health indicators, or progress toward a goal.</p>
            <RadialChart Value="72" Label="Performance" Color="#6366f1" ShowProgress="true" />
        </div>
    </ComponentDemo>

