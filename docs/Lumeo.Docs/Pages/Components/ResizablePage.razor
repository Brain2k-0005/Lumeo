<PageHeader Title="Resizable" Description="Accessible resizable panel groups and layouts with drag-to-resize handles." />

<div class="space-y-8">
    <ComponentDemo Title="Horizontal" Code="@_horizontalCode">
        <div class="w-full max-w-lg">
            <ResizablePanelGroup Direction="ResizablePanelGroup.ResizableDirection.Horizontal" DefaultSizes="@(new double[] { 50, 50 })" Class="min-h-[200px] rounded-lg border">
                <ResizablePanel Order="0">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel One</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle PanelIndex="0" WithHandle="true" />
                <ResizablePanel Order="1">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel Two</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Vertical" Code="@_verticalCode">
        <div class="w-full max-w-lg">
            <ResizablePanelGroup Direction="ResizablePanelGroup.ResizableDirection.Vertical" DefaultSizes="@(new double[] { 40, 60 })" Class="min-h-[300px] rounded-lg border">
                <ResizablePanel Order="0">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Top</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle PanelIndex="0" WithHandle="true" />
                <ResizablePanel Order="1">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Bottom</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Three Panels" Code="@_threeCode">
