<PageHeader Title="Separator" Description="Visually or semantically separates content." />

<div class="space-y-8">
    <ComponentDemo Title="Horizontal" Code="@_horizontalCode">
        <div class="w-full max-w-sm">
            <div class="space-y-1">
                <h4 class="text-sm font-medium leading-none">Lumeo UI</h4>
                <p class="text-sm text-muted-foreground">An open-source component library for Blazor.</p>
            </div>
            <Separator Class="my-4" />
            <div class="flex h-5 items-center space-x-4 text-sm">
                <div>Docs</div>
                <Separator Orientation="Separator.SeparatorOrientation.Vertical" />
                <div>Source</div>
                <Separator Orientation="Separator.SeparatorOrientation.Vertical" />
                <div>Blog</div>
            </div>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="In a Card" Code="@_cardCode">
        <div class="w-full max-w-sm">
            <Card>
                <CardContent Class="pt-4">
                    <div class="space-y-3">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-muted-foreground">Subtotal</span>
                            <span class="text-foreground font-medium">$89.00</span>
                        </div>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-muted-foreground">Shipping</span>
                            <span class="text-foreground font-medium">$4.99</span>
                        </div>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-muted-foreground">Tax</span>
                            <span class="text-foreground font-medium">$7.12</span>
                        </div>
                        <Separator />
                        <div class="flex items-center justify-between text-sm font-semibold">
                            <span class="text-foreground">Total</span>
                            <span class="text-foreground">$101.11</span>
                        </div>
                    </div>
                </CardContent>
            </Card>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Vertical" Code="@_verticalCode">
        <div class="flex h-5 items-center space-x-4 text-sm">
            <div>Home</div>
            <Separator Orientation="Separator.SeparatorOrientation.Vertical" />
            <div>Components</div>
            <Separator Orientation="Separator.SeparatorOrientation.Vertical" />
            <div>Themes</div>
            <Separator Orientation="Separator.SeparatorOrientation.Vertical" />
            <div>GitHub</div>
        </div>
    </ComponentDemo>
</div>

