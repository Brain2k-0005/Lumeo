@namespace Lumeo

@{
    var context = new SheetContext(IsOpen, EventCallback.Factory.Create<bool>(this, SetOpen));
}

<CascadingValue Value="context" IsFixed="false">
    @ChildContent
</CascadingValue>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    private async Task SetOpen(bool value)
    {
        IsOpen = value;
        await IsOpenChanged.InvokeAsync(value);
    }

    public record SheetContext(bool IsOpen, EventCallback<bool> SetOpen);
}
