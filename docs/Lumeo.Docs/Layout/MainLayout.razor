@inherits LayoutComponentBase

<div class="min-h-screen bg-background">
    <!-- Top Header -->
    <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur">
        <div class="flex h-14 items-center px-6">
            <a href="" class="mr-6 flex items-center space-x-2 font-bold text-lg text-foreground no-underline">
                <span class="text-primary">Lumeo</span>
            </a>
            <nav class="hidden md:flex items-center space-x-6 text-sm font-medium">
                <a href="" class="text-foreground/60 hover:text-foreground transition-colors no-underline">Home</a>
                <a href="components" class="text-foreground/60 hover:text-foreground transition-colors no-underline">Components</a>
                <a href="patterns" class="text-foreground/60 hover:text-foreground transition-colors no-underline">Patterns</a>
                <a href="themes" class="text-foreground/60 hover:text-foreground transition-colors no-underline">Themes</a>
            </nav>
            <div class="flex flex-1 items-center justify-end space-x-2">
                <Button Variant="Button.ButtonVariant.Ghost" Size="Button.ButtonSize.Icon" OnClick="ToggleDarkMode">
                    @if (_darkMode)
                    {
                        <Blazicon Svg="Lucide.Sun" class="h-4 w-4" />
                    }
                    else
                    {
                        <Blazicon Svg="Lucide.Moon" class="h-4 w-4" />
                    }
                </Button>
                <a href="https://github.com/Brain2k-0005/Lumeo" target="_blank" class="inline-flex items-center justify-center h-9 w-9 rounded-md text-foreground/60 hover:text-foreground transition-colors no-underline">
                    <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content with Sidebar -->
    <div class="flex">
        <NavMenu />
        <main class="flex-1 overflow-auto">
            <div class="container mx-auto px-6 py-8 max-w-5xl">
                @Body
            </div>
        </main>
    </div>
</div>

@inject IJSRuntime JS

@code {
    private bool _darkMode;

    private async Task ToggleDarkMode()
    {
        _darkMode = !_darkMode;
        await JS.InvokeVoidAsync("eval", _darkMode
            ? "document.documentElement.classList.add('dark')"
            : "document.documentElement.classList.remove('dark')");
    }
}
