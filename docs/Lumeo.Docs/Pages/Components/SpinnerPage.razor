@page "/components/spinner"

<PageTitle>Spinner â€” Lumeo</PageTitle>

<PageHeader Title="Spinner" Description="A loading spinner indicator with multiple sizes." />

<div class="space-y-8">
    <ComponentDemo Title="Sizes" Code="@_sizesCode">
        <div class="flex items-center gap-6">
            <div class="flex flex-col items-center gap-2">
                <Spinner Size="Spinner.SpinnerSize.Sm" />
                <span class="text-xs text-muted-foreground">Small</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <Spinner />
                <span class="text-xs text-muted-foreground">Default</span>
            </div>
            <div class="flex flex-col items-center gap-2">
                <Spinner Size="Spinner.SpinnerSize.Lg" />
                <span class="text-xs text-muted-foreground">Large</span>
            </div>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Text" Code="@_textCode">
        <div class="flex items-center gap-2">
            <Spinner Size="Spinner.SpinnerSize.Sm" />
            <span class="text-sm text-muted-foreground">Loading...</span>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="In a Button" Code="@_buttonCode">
        <Button Disabled="true">
            <Spinner Size="Spinner.SpinnerSize.Sm" Class="mr-2" />
            Please wait
        </Button>
    </ComponentDemo>
</div>

@code {
    private string _sizesCode = @"<Spinner Size=""Spinner.SpinnerSize.Sm"" />
<Spinner />
<Spinner Size=""Spinner.SpinnerSize.Lg"" />";

    private string _textCode = @"<div class=""flex items-center gap-2"">
    <Spinner Size=""Spinner.SpinnerSize.Sm"" />
    <span class=""text-sm text-muted-foreground"">Loading...</span>
</div>";

    private string _buttonCode = @"<Button Disabled=""true"">
    <Spinner Size=""Spinner.SpinnerSize.Sm"" Class=""mr-2"" />
    Please wait
</Button>";
}
