@page "/components/context-menu"

<PageTitle>Context Menu â€” Lumeo</PageTitle>

<PageHeader Title="Context Menu" Description="Displays a menu triggered by right-clicking an element." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <ContextMenu>
            <ContextMenuTrigger>
                <div class="flex h-[150px] w-[300px] items-center justify-center rounded-md border border-dashed text-sm text-muted-foreground">
                    Right click here
                </div>
            </ContextMenuTrigger>
            <ContextMenuContent>
                <ContextMenuItem>Back</ContextMenuItem>
                <ContextMenuItem>Forward</ContextMenuItem>
                <ContextMenuItem>Reload</ContextMenuItem>
                <ContextMenuSeparator />
                <ContextMenuItem>Save As...</ContextMenuItem>
                <ContextMenuItem>Print</ContextMenuItem>
            </ContextMenuContent>
        </ContextMenu>
    </ComponentDemo>

    <ComponentDemo Title="With Labels and Groups" Code="@_groupCode">
        <ContextMenu>
            <ContextMenuTrigger>
                <div class="flex h-[150px] w-[300px] items-center justify-center rounded-md border border-dashed text-sm text-muted-foreground">
                    Right click here
                </div>
            </ContextMenuTrigger>
            <ContextMenuContent>
                <ContextMenuLabel>Edit</ContextMenuLabel>
                <ContextMenuGroup>
                    <ContextMenuItem>Cut</ContextMenuItem>
                    <ContextMenuItem>Copy</ContextMenuItem>
                    <ContextMenuItem>Paste</ContextMenuItem>
                </ContextMenuGroup>
                <ContextMenuSeparator />
                <ContextMenuLabel>View</ContextMenuLabel>
                <ContextMenuGroup>
                    <ContextMenuItem>Zoom In</ContextMenuItem>
                    <ContextMenuItem>Zoom Out</ContextMenuItem>
                    <ContextMenuItem>Reset Zoom</ContextMenuItem>
                </ContextMenuGroup>
                <ContextMenuSeparator />
                <ContextMenuItem Disabled="true">Delete</ContextMenuItem>
            </ContextMenuContent>
        </ContextMenu>
    </ComponentDemo>

    <ComponentDemo Title="File Actions" Code="@_fileCode">
        <ContextMenu>
            <ContextMenuTrigger>
                <div class="flex h-[150px] w-[300px] items-center justify-center rounded-md border border-dashed">
                    <div class="text-center">
                        <div class="text-sm font-medium text-foreground">document.pdf</div>
                        <div class="text-xs text-muted-foreground mt-1">Right click for options</div>
                    </div>
                </div>
            </ContextMenuTrigger>
            <ContextMenuContent>
                <ContextMenuItem>
                    <Blazicon Svg="Lucide.Eye" class="mr-2 h-4 w-4" />
                    Open
                </ContextMenuItem>
                <ContextMenuItem>
                    <Blazicon Svg="Lucide.Copy" class="mr-2 h-4 w-4" />
                    Duplicate
                </ContextMenuItem>
                <ContextMenuSeparator />
                <ContextMenuItem>
                    <Blazicon Svg="Lucide.ArrowRight" class="mr-2 h-4 w-4" />
                    Move to...
                </ContextMenuItem>
                <ContextMenuSeparator />
                <ContextMenuItem>
                    <Blazicon Svg="Lucide.Star" class="mr-2 h-4 w-4" />
                    Add to Favorites
                </ContextMenuItem>
                <ContextMenuSeparator />
                <ContextMenuItem>
                    <Blazicon Svg="Lucide.Trash" class="mr-2 h-4 w-4" />
                    Delete
                </ContextMenuItem>
            </ContextMenuContent>
        </ContextMenu>
    </ComponentDemo>
</div>

