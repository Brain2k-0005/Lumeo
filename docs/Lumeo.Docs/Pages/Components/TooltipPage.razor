@page "/components/tooltip"

<PageTitle>Tooltip — Lumeo</PageTitle>

<PageHeader Title="Tooltip" Description="A popup that displays information related to an element when the element receives hover focus." />

<div class="space-y-8">
    <ComponentDemo Title="Default" Code="@_defaultCode">
        <Tooltip>
            <TooltipTrigger>
                <Button Variant="Button.ButtonVariant.Outline">Hover me</Button>
            </TooltipTrigger>
            <TooltipContent>
                <p>Add to library</p>
            </TooltipContent>
        </Tooltip>
    </ComponentDemo>

    <ComponentDemo Title="Side Variations" Code="@_sideCode">
        <div class="flex gap-4">
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Top</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Top">
                    <p>Tooltip on top</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Right</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Right">
                    <p>Tooltip on right</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Bottom</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Bottom">
                    <p>Tooltip on bottom</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Sm">Left</Button>
                </TooltipTrigger>
                <TooltipContent Side="TooltipContent.TooltipSide.Left">
                    <p>Tooltip on left</p>
                </TooltipContent>
            </Tooltip>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="With Icons" Code="@_iconCode">
        <div class="flex gap-4">
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                        <DynamicIcon Name="Bold" Class="h-4 w-4" />
                    </Button>
                </TooltipTrigger>
                <TooltipContent>
                    <p>Bold</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                        <DynamicIcon Name="Italic" Class="h-4 w-4" />
                    </Button>
                </TooltipTrigger>
                <TooltipContent>
                    <p>Italic</p>
                </TooltipContent>
            </Tooltip>
            <Tooltip>
                <TooltipTrigger>
                    <Button Variant="Button.ButtonVariant.Outline" Size="Button.ButtonSize.Icon">
                        <DynamicIcon Name="Underline" Class="h-4 w-4" />
                    </Button>
                </TooltipTrigger>
                <TooltipContent>
                    <p>Underline</p>
                </TooltipContent>
            </Tooltip>
        </div>
    </ComponentDemo>
</div>

<!-- API Reference -->
<div class="mt-12 space-y-6">
    <h2 class="text-2xl font-bold text-foreground">API Reference</h2>

    <div class="space-y-8">
        <div>
            <h3 class="text-lg font-semibold text-foreground mb-3">TooltipContent</h3>
            <div class="rounded-lg border border-border overflow-hidden">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b bg-muted/40">
                            <th class="text-left p-3 font-medium text-foreground">Property</th>
                            <th class="text-left p-3 font-medium text-foreground">Type</th>
                            <th class="text-left p-3 font-medium text-foreground">Default</th>
                            <th class="text-left p-3 font-medium text-foreground">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border/40">
                        <tr>
                            <td class="p-3 font-mono text-xs text-primary">Side</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">TooltipSide</td>
                            <td class="p-3 font-mono text-xs text-muted-foreground">Top</td>
                            <td class="p-3 text-muted-foreground">Which side of the trigger the tooltip appears on. Values: Top, Bottom, Left, Right.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div>
            <h3 class="text-lg font-semibold text-foreground mb-3">Tooltip / TooltipTrigger</h3>
            <div class="rounded-lg border border-border overflow-hidden">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b bg-muted/40">
                            <th class="text-left p-3 font-medium text-foreground">Property</th>
                            <th class="text-left p-3 font-medium text-foreground">Type</th>
                            <th class="text-left p-3 font-medium text-foreground">Default</th>
                            <th class="text-left p-3 font-medium text-foreground">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border/40">
                        <tr>
                            <td class="p-3 font-mono text-xs text-primary italic text-muted-foreground" colspan="4">Tooltip is a group container using CSS group-hover. TooltipTrigger wraps the element that triggers the tooltip on hover.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

