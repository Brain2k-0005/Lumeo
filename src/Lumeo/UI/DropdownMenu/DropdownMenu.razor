@namespace Lumeo

@{
    var context = new DropdownMenuContext(IsOpen, EventCallback.Factory.Create<bool>(this, SetOpen), _wrapperId);
}

<CascadingValue Value="context" IsFixed="false">
    <div id="@_wrapperId" class="relative inline-block" @attributes="AdditionalAttributes">
        @ChildContent
    </div>
</CascadingValue>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private readonly string _wrapperId = $"dropdown-{Guid.NewGuid():N}";

    private async Task SetOpen(bool value)
    {
        IsOpen = value;
        await IsOpenChanged.InvokeAsync(value);
    }

    public record DropdownMenuContext(bool IsOpen, EventCallback<bool> SetOpen, string WrapperId);
}
