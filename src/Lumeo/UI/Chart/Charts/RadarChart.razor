@namespace Lumeo

<Chart Option="@_option" Width="@Width" Height="@Height" Theme="@Theme" Class="@Class" @attributes="AdditionalAttributes" />

@code {
    [Parameter] public List<RadarIndicator> Indicators { get; set; } = new();
    [Parameter] public List<RadarSeriesData> Series { get; set; } = new();
    [Parameter] public bool ShowLegend { get; set; } = true;
    [Parameter] public bool ShowTooltip { get; set; } = true;
    [Parameter] public string Shape { get; set; } = "polygon";
    [Parameter] public bool FillArea { get; set; } = true;
    [Parameter] public List<string>? Colors { get; set; }
    [Parameter] public string Width { get; set; } = "100%";
    [Parameter] public string Height { get; set; } = "350px";
    [Parameter] public string? Theme { get; set; }
    [Parameter] public string? Class { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private EChartOption _option = new();

    protected override void OnParametersSet()
    {
        var radarData = Series.Select(s => new EChartRadarData
        {
            Name = s.Name,
            Value = s.Values,
            AreaStyle = FillArea ? new EChartAreaStyle { Opacity = 0.3 } : null
        }).ToList();

        var series = new EChartSeries
        {
            Type = "radar",
            Data = radarData
        };

        _option = new EChartOption
        {
            Radar = new EChartRadar
            {
                Indicator = Indicators.Select(i => new EChartRadarIndicator
                {
                    Name = i.Name,
                    Max = i.Max
                }).ToList(),
                Shape = Shape
            },
            Series = new List<EChartSeries> { series },
            Color = Colors
        };

        if (ShowTooltip)
        {
            _option.Tooltip = new EChartTooltip
            {
                Trigger = "item"
            };
        }

        if (ShowLegend && Series.Count > 0)
        {
            _option.Legend = new EChartLegend
            {
                Data = Series.Select(s => s.Name).ToList()
            };
        }
    }

    public class RadarIndicator
    {
        public string Name { get; set; } = "";
        public double Max { get; set; }
    }

    public class RadarSeriesData
    {
        public string Name { get; set; } = "";
        public List<double> Values { get; set; } = new();
    }
}
