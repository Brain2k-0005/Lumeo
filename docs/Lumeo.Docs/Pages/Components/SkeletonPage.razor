@page "/components/skeleton"

<PageTitle>Skeleton â€” Lumeo</PageTitle>

<PageHeader Title="Skeleton" Description="Displays a placeholder loading animation while content is being fetched." />

<div class="space-y-8">
    <ComponentDemo Title="Basic Shapes" Code="@_basicCode">
        <div class="space-y-4">
            <Skeleton Class="h-4 w-[250px]" />
            <Skeleton Class="h-4 w-[200px]" />
            <Skeleton Class="h-4 w-[150px]" />
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Card Skeleton" Code="@_cardCode">
        <div class="w-full max-w-sm">
            <Card>
                <CardHeader>
                    <Skeleton Class="h-5 w-[180px]" />
                    <Skeleton Class="h-4 w-[250px]" />
                </CardHeader>
                <CardContent>
                    <div class="space-y-2">
                        <Skeleton Class="h-4 w-full" />
                        <Skeleton Class="h-4 w-full" />
                        <Skeleton Class="h-4 w-[80%]" />
                    </div>
                </CardContent>
            </Card>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="Profile Skeleton" Code="@_profileCode">
        <div class="flex items-center space-x-4">
            <Skeleton Class="h-12 w-12 rounded-full" />
            <div class="space-y-2">
                <Skeleton Class="h-4 w-[200px]" />
                <Skeleton Class="h-4 w-[160px]" />
            </div>
        </div>
    </ComponentDemo>

    <ComponentDemo Title="List Skeleton" Code="@_listCode">
        <div class="w-full max-w-md space-y-4">
            @for (var i = 0; i < 3; i++)
            {
                <div class="flex items-center space-x-4">
                    <Skeleton Class="h-10 w-10 rounded-full" />
                    <div class="flex-1 space-y-2">
                        <Skeleton Class="h-4 w-[60%]" />
                        <Skeleton Class="h-3 w-[40%]" />
                    </div>
                </div>
            }
        </div>
    </ComponentDemo>
</div>

<!-- API Reference -->
<div class="mt-12 space-y-6">
    <h2 class="text-2xl font-bold text-foreground">API Reference</h2>

    <div class="space-y-8">
        <div>
            <h3 class="text-lg font-semibold text-foreground mb-3">Skeleton</h3>
            <div class="rounded-lg border border-border overflow-hidden">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b bg-muted/40">
                            <th class="text-left p-3 font-medium text-foreground">Property</th>
                            <th class="text-left p-3 font-medium text-foreground">Type</th>
                            <th class="text-left p-3 font-medium text-foreground">Default</th>
                            <th class="text-left p-3 font-medium text-foreground">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border/40">
                        <tr>
                            <td class="p-3 font-mono text-xs text-primary italic text-muted-foreground" colspan="4">Skeleton is a simple pulsing placeholder element. Use the Class parameter to set width, height, and border-radius (e.g., Class="h-4 w-[200px] rounded-full").</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

